<% if !current_user.nil? %>

  <!-- <h3>time diff</h3>
  <p><%# @time_diff %></p>

  <h2>DATA ORIGIN</h2>
  <p><%# @data_origin %></p> -->
  <div class="row" id="f-data">
    <h3 class="small-12 medium-4 columns">FOLLOWING: <%= @total_following %></h3>
    <h3 class="small-12 medium-4 columns">FOLLOWERS: <%= @total_followers %></h3>
    <h3 class="small-12 medium-4 columns" id="ratio-block">GOLDEN RATIO 1:<%= @golden_ratio %></h3>
  </div>
  <div class="row">
    <div class="small-6 medium-5 columns list">
      <h2 class="header"> Rude Peeps </h2>
      <table>
        <% @nonfollowers_names_and_images.each do |peep| %>
          <tr>
            <td>
              <a href="http://twitter.com/<%= peep[0] %>", target='_blank' >
                <img src="<%= peep[1] %>" alt="rude person image">
              </a>
            </td>
            <td><%= link_to "#{ peep[0] }", ("http://twitter.com/" + "#{peep[0]}" ), target: :_blank %></td>
            <td><%= button_to 'Unfollow', {:controller => "home", :action => "unfollow", :peep_name => peep[0], :user_id=> session[:user_id]} , :method=>:post, :class=>'unfollow-button' %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="small-6 medium-5 columns list">
      <h2 class="header"> Groupies </h2>
      <table>
        <% @groupies_names_and_images.each do |peep| %>
          <tr>
            <td>
              <a href="http://twitter.com/<%= peep[0] %>", target='_blank' >
                <img src="<%= peep[1] %>" alt="groupie person image">
              </a>
            </td>
            <td><%= link_to "#{ peep[0] }", ("http://twitter.com/" + "#{peep[0]}" ), target: :_blank %></td>
            <td><%= button_to "Follow", {:controller => "home", :action => "follow", :peep_name => peep[0], :user_id=> session[:user_id]} , :method=>:post, :class=>'follow-button'   %></td>



          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% else %>
  <p>You must log in.</p>
<% end %>
